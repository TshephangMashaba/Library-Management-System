@model u22550667_HW03.Models.borrow

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    <center>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Edit Borrow</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.borrowId)

                <div class="form-group">
                    <p>Student Name</p>
                    <div class="col-md-10">
                        @Html.DropDownList("studentId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.studentId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Book Name</p>
                    <div class="col-md-10">
                        @Html.DropDownList("bookId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.bookId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Taken Date</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.takenDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.takenDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Brought Date</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.broughtDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.broughtDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        }
    </center>
</body>
</html>
