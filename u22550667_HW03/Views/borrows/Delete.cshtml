@model u22550667_HW03.Models.borrow

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Borrow</title>
</head>
<body>
    <center>
        <h3>Are you sure you want to delete this Borrow Data?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Taken Date
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.takenDate)
                </dd>

                <dt>
                    Brought Date
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.broughtDate)
                </dd>

                <dt>
                    Book Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.book.name)
                </dd>

                <dt>
                    Student Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.student.name)
                </dd>

            </dl>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancel</button>
                </div>
            }
        </div>
    </center>
</body>
</html>
