<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="bg-warning">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-black bg-black border-bottom border-light">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <img src="~/Images/Library Management System.png" alt="Logo" style="height: 100px;" />
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end flex-column align-items-end">
                <ul class="navbar-nav flex-grow-2 justify-content-end">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link" style="color: #ff6e29;">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Maintain", "Home")" class="nav-link" style="color: #ff6e29;">Maintain</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Report", "Home")" class="nav-link" style="color: #ff6e29;">Reports</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

        @RenderBody()
        <hr />
        <div class="footer-wrapper border-top border-light bg-black text-light text-center py-3">
            <footer>
                <p class="mb-1" style="color: #ff6e29;">&copy; @DateTime.Now.Year - Library Management System</p>
                <br>
                <p class="mb-0">
                    <a href="#" class="text-light text-decoration-none">Privacy Policy</a> |
                    <a href="#" class="text-light text-decoration-none">Terms of Service</a> |
                    <a href="#" class="text-light text-decoration-none">Contact Us</a>
                </p>
            </footer>
        </div>



        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
 </body>

</html>
