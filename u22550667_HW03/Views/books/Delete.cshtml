@model u22550667_HW03.Models.book

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
   
    <div>
        <h4>Are you sure you want to delete this Book?</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Book Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

            <dt>
                Page Count
            </dt>

            <dd>
                @Html.DisplayFor(model => model.pagecount)
            </dd>

            <dt>
                Point
            </dt>

            <dd>
                @Html.DisplayFor(model => model.point)
            </dd>

            <dt>
                Author Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.author.name)
            </dd>

            <dt>
                Book Type
            </dt>

            <dd>
                @Html.DisplayFor(model => model.type.name)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancel</button>
            </div>
        }
    </div>
</body>
</html>
